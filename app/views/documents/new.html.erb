<!-- app/views/documents/new.html.erb -->
<h1>Upload a Document</h1>

<%= form_with model: @document, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :file %>
    <%= form.file_field :file %>
  </div>

  <div>
    <%= form.submit "Upload Document" %>
  </div>
<% end %>
